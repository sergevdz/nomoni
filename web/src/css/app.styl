// app global css

.fs28
  font-size 28px

.fs30
  font-size 30px

.fs32
  font-size 32px

.panel-header
  background-color white
  border-bottom (1px solid rgba(0, 0, 0, 0.12))

.page-title
  color #444444

.content-panel
  border (1px solid rgba(0, 0, 0, 0.12))
  box-shadow (0px 1px 2px rgba(0, 0, 0, 0.1))
  border-radius 3px

.pull-right
  text-align right

// table
